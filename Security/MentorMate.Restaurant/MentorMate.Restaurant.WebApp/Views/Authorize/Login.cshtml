@model UserLoginFormModel
@{
    ViewData["Title"] = "Login";
}

<form autocomplete="off" asp-controller="Authorize" asp-action="Login" method="post">
    <div class="container-fluid text-center col-6">
        <h3>Sign into your account</h3>
        <div asp-validation-summary="All" class="text-danger float-start"></div>
        <div class="text-left">
            <div class="form-group mt-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
                    <input type="email" asp-for="Email" placeholder="Email" class="form-control" />
                </div>
            </div>
            <div class="form-group mt-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                    <input type="password" asp-for="Password" placeholder="Password" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group d-grid gap-2 mt-3">
            <button type="submit" class="btn btn-primary">Sign In</button>
        </div>
    </div>
</form>